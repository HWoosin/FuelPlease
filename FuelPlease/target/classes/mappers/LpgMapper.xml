<mapper namespace="com.spring.fuelplease.AllFuel.mapper.ILpgMapper">

	<insert id="inputLpg">
		insert into lpgInfo
		VALUES(#{lno}, #{lpgBsinSortCode}, #{siteAddr}, #{offTelno}, #{trnmNm})
	</insert>
	
	<select id="findLpg" resultType="string">
		select substring_index(site_addr,'êµ¬ ',-1) 
		as site_addr
		from lpgInfo 
		where site_addr like concat('%',#{keyword}, '%')
		order by site_addr asc;
	</select>
	
</mapper>